{
	"scripts": {
		"build:countries": "mkdir -p ./build && csv-parser ./countries.csv | JSONStream > ./build/countries.json",
		"build:schemes": "mkdir -p ./build && csv-parser ./schemes.csv | JSONStream > ./build/schemes.json",
		"build": "npm run -s build:countries && npm run -s build:schemes",
		"check-ranges": "npm run -s build && node ./tools/check-ranges < ./ranges.csv",
		"test": "npm run -s check-ranges"
	},
	"dependencies": {
		"csv-parser": "^1.9.3",
		"csv-write-stream": "^1.0.0",
		"deep-equal": "^1.0.1",
		"JSONStream": "^1.0.7",
		"through2-map": "^2.0.0"
	}
}
